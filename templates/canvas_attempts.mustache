<div class="card-deck mt-4">
    {{#attempts}}
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="image-holder">
                    <img class="card-img-top img-fluid" src="{{src}}" alt="">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{added_on}}
                    </h5>
                    <a href="{{src}}" target="_blank" class="btn btn-success pull-right">
                        <i class="fa fa-download" aria-hidden="true"></i>
                    </a>
                    <a href="#" data-id="{{id}}" target="_blank" class="restore btn btn-default pull-right">
                        <i class="fa fa-refresh" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    {{/attempts}}
</div>