{{!
    @template mod_canvas/canvas_attempts

    Overview of user there attempts

    Context variables required for this template:
    * id - The id of the attempt
    * src - The path to the image
    * added_on - The time the attempt was added

    Example context (json):
    {
        "attempts": [{
            "id" : 1,
            "src" : "https://domain.com/attempt.jpg",
            "added_on" : "01-11-2018 12:08"
        }]
    }
}}
<div class="container card-deck mt-4">
    {{#attempts}}
        <div class="col-3 span3 mb-4">
            <div class="card">
                <div class="h-100">
                    <img class="card-img-top img-fluid" src="{{src}}" alt="{{added_on}}">
                    <div class="card-body">
                        <h5 class="card-title">{{added_on}}</h5>
                        <span data-id="{{id}}" class="delete btn btn-danger pull-right"
                              title="{{# str}} btn:remove, mod_gcanvas {{/ str}}">
                        <i class="fa fa-remove" aria-hidden="true"></i>
                    </span>
                        <a href="{{src}}" class="btn btn-success pull-right"
                           title="{{# str}} btn:download, mod_gcanvas {{/ str}}">
                            <i class="fa fa-download" aria-hidden="true"></i>
                        </a>
                        <span data-id="{{id}}" class="restore btn btn-default pull-right"
                              title="{{# str}} btn:restore, mod_gcanvas {{/ str}}">
                        <i class="fa fa-refresh" aria-hidden="true"></i>
                    </span>
                    </div>
                </div>
            </div>
        </div>
    {{/attempts}}
</div>