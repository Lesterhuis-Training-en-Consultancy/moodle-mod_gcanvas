<div class="d-flex flex-row">
    <div class="p-2" id="toolbar">
        <div class="btn icon" data-element-type="Circle" title="{{# str}} btn:circle, mod_gcanvas {{/ str}}">
            <i class="fa fa-circle"></i>
        </div>
        <div class="btn icon" data-element-type="Rect" title="{{# str}} btn:rect, mod_gcanvas {{/ str}}">
            <i class="fa fa-square"></i>
        </div>
        <div class="btn icon" data-element-type="Triangle" title="{{# str}} btn:triangle, mod_gcanvas {{/ str}}">
            <i class="fa fa-caret-up"></i>
        </div>
        <div class="btn icon" data-element-type="Arrow" title="{{# str}} btn:arrow, mod_gcanvas {{/ str}}">
            <i class="fa fa-caret-left"></i>
        </div>
    </div>
    <div class="p-0">
        <div class="teacher-toolbar">

        </div>
        <canvas id="sketch" height="500" style="border:1px solid #aaa"></canvas>
    </div>
</div>